<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BeanCounter.Views.AboutPage"
    Title="About">
    <StackLayout Grid.Row="1"
                    Margin="20"
                    Spacing="20">
        <Label FontSize="22">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Bean Counter" FontAttributes="Bold" FontSize="19" TextColor="Black"/>
                        <Span Text=" v1.0" FontSize="19" TextColor="Black" />
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    <Label Text="Initial release! Add your coffees in the Coffee tab, then log your espresso shots in the Log!" FontSize="Small" TextColor="Black" />
    </StackLayout>
</ContentPage>

